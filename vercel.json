{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/api"
    },
    {
      "src": "^/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/public/static/$1"
    },
    {
      "src": "^/login$",
      "dest": "/public/login.html"
    },
    {
      "src": "^/signup$",
      "dest": "/public/signup.html"
    },
    {
      "src": "^/dashboard$",
      "dest": "/public/index.html"
    },
    {
      "src": "^/$",
      "dest": "/public/login.html"
    },
    {
      "src": "^/(.*\\.(?:js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))$",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/public/index.html"
    }
  ]
}