{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "^/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/login$",
      "dest": "/public/login.html"
    },
    {
      "src": "^/signup$",
      "dest": "/public/signup.html"
    },
    {
      "src": "^/dashboard$",
      "dest": "/public/index.html"
    },
    {
      "src": "^/$",
      "dest": "/public/login.html"
    },
    {
      "src": "^/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/public/index.html"
    }
  ]
}