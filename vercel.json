{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "HOST": "0.0.0.0",
    "FRONTEND_URL_PROD": "https://chd-police-hackathon.vercel.app",
    "BACKEND_URL": "https://chdpolice-hackathon.onrender.com",
    "CORS_ORIGIN_PROD": "https://chd-police-hackathon.vercel.app",
    "GOOGLE_CALLBACK_URL_PROD": "https://email-detection-api.onrender.com/api/gmail/callback"
  }
}