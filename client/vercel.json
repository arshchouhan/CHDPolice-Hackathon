{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm start",
  "outputDirectory": "build",
  "framework": "create-react-app",
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://chdpolice-hackathon.onrender.com/api/:path*"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "*" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ],
  "env": {
    "REACT_APP_API_URL": "/api",
    "REACT_APP_GOOGLE_CLIENT_ID": "317162009302-294m6fsmrlqfa30q091rnkmo69uos1ba.apps.googleusercontent.com"
  }
}
